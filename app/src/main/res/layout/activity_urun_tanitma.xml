<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rumeysal.productinformation.UrunTanitma"
    android:background="@drawable/bg_uruntanitimsonunsonu">


    <android.support.v4.view.ViewPager
        android:id="@+id/Pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:onClick="ClickedImage"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/QRID"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/name_input"
        android:hint="  ID"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/PhotoAdd"
        android:layout_toLeftOf="@+id/Onay"
        android:layout_toStartOf="@+id/Onay" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/QRID"
        android:layout_alignStart="@+id/QRID"
        android:layout_below="@+id/QRID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/name_input"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Kurum"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/name_input"
        android:ems="10"
        android:hint="Kurum Bilgisi"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Onay"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="Onayla"
        android:background="@drawable/onybutton"
    android:onClick="clicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/PhotoAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_camera"
        android:onClick="AddPhotoImage"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/Pager"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
