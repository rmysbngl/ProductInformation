<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rumeysal.productinformation.ArduinoGiris"
    android:background="@drawable/background">

    <Button
        android:id="@+id/ayarlar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:onClick="ArduinoStart"
        android:background="@drawable/settingbutton"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/BluetoothCondition"
        android:layout_alignLeft="@+id/Baslat"
        android:layout_alignStart="@+id/Baslat" />

    <Button
        android:id="@+id/Baslat"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:onClick="ArduinoStart"
        android:background="@drawable/startbutton"
        android:layout_marginBottom="82dp"
        android:layout_alignBottom="@+id/ayarlar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/BluetoothCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth status: "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
