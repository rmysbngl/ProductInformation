<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135sp"
    android:orientation="vertical"
    android:background="@drawable/searchdatebg">

    <!--Linerar Layout for Date & Time  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="0.00"
        android:orientation="horizontal"
        android:background="@drawable/bg_uruntanitimm">

        <TextView
            android:id="@+id/asdfas"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tarih/Saat"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/UrunBilgi"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tarih"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/SaatBilgi"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Saat"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/UrunVacuum"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="Database veri"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/UrunPlazma"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="UrunPlazma" />

        <TextView
            android:id="@+id/UrunGas"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="UrunGas"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</LinearLayout>