<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/searchdatebg">


    <TextView
        android:id="@+id/asdfas"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="TARİH" />
    <TextView
        android:id="@+id/UrunBilgi"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="Bilgi türü" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/UrunVacuum"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="Database veri"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/UrunPlazma"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="UrunPlazma" />

        <TextView
            android:id="@+id/UrunGas"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="UrunGas"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</LinearLayout>