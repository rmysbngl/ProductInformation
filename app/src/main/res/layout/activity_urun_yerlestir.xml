<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_uruntanitimm"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.rumeysal.productinformation.UrunYerlestir">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvID"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:text="ID"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:text="Ürün Adı"
            android:gravity="center"/>

    </LinearLayout>

    <ListView
        android:id="@+id/EklenenUrunler"
        android:layout_width="wrap_content"
        android:layout_height="400sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40sp"
        android:background="@drawable/bg_uruntanitimm"
        android:clipToPadding="false"
        android:divider="@drawable/bg_uruntanitimm"
        android:dividerHeight="1sp"
        android:footerDividersEnabled="true"
        android:foregroundGravity="center"
        android:headerDividersEnabled="true"
        android:isScrollContainer="true"
        android:textAlignment="center"
        android:verticalScrollbarPosition="right" />

    <Button
        android:id="@+id/add_product1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:background="@drawable/btnadd" />


    <Button
        android:id="@+id/ArduinoPart"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/add_product1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:background="@drawable/btnok" />

</RelativeLayout>
